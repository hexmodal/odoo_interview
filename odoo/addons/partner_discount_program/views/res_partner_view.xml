<odoo>
    <record id="view_partner_form_inherit_discounts_program" model="ir.ui.view">
        <field name="name">res.partner.form.discounts.program</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group string="Discount Program">
                    <field name="x_base_discount"/>
                    <field name="x_extra_discount"/>
                    <field name="x_total_discount" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
