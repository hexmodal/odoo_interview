<odoo>
    <record id="view_partner_form_customer_code" model="ir.ui.view">
        <field name="name">res.partner.form.customer.code</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group string="Customer Code">
                    <field name="x_customer_code" widget="customer_code"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
